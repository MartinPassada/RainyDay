            <img class="logoImage" src="img/groups.png" height="105px" width="105px"></img>

            <form class="form" action="">
                <label>
                        <input class="groupName" id="groupName" type="text" placeholder="Nombre del Grupo" />
                    </label>
                <label>
                        <input class="groupDescription" id="groupDescription" type="text" placeholder="Descripcion" />
                    </label>

                <div class="alertBox-SuccessForGroupsForm" id="alertBox-SuccessForGroupsForm">
                    <strong>Exito!</strong>
                </div>
                <div class="alertBox-ErrorForGroupsForm" id="alertBox-ErrorForGroupsForm">
                    <strong>Error!</strong>
                </div>

                <a class="submitButton" id="submitButton" onclick="checkUserStatusAndCreateGroup()">CREAR GRUPO</a>

            </form>
        </div>
    </section>
