    <section class="loginForm" id="loginForm">
        <div class="overlay"></div>

        <div class="background-image-login"></div>

        <h1 class="login-h1">INGRESAR</h1>

        <div class="login-container">

            <img class="crossForCloseImg" id="crossForCloseImg" src="../img/crossforclose.png" onclick="closeLoginFormHandlebars()" height="25px" width="25px"></img>
            <img class="logoImage" src="img/logo.png" height="105px" width="105px"></img>

            <form class="form" action="">
